#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Cuantos elementos tiene el vector? ";
    cin >> n;

    int v[100];

    // leer datos
    for (int i = 0; i < n; i++) {
        cout << "Elemento " << i + 1 << ": ";
        cin >> v[i];
    }

    // invertir en el mismo vector
    int i = 0;
    int j = n - 1;
    while (i < j) {
        int aux = v[i];
        v[i] = v[j];
        v[j] = aux;
        i++;
        j--;
    }

    // mostrar resultado
    cout << "Vector invertido: ";
    for (int k = 0; k < n; k++) {
        cout << v[k] << " ";
    }

    return 0;
}
