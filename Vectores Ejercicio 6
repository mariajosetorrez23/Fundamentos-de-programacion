#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Cuantos valores tendra el vector? ";
    cin >> n;

    if (n < 3) {
        cout << "Debe ingresar al menos 3 valores." << endl;
        return 0;
    }

    float v[100];

    // leer los valores
    for (int i = 0; i < n; i++) {
        cout << "Valor " << i + 1 << ": ";
        cin >> v[i];
    }

    cout << "Promedios de cada 3 valores consecutivos:" << endl;

    // calcular P1, P2, P3, ...
    for (int i = 0; i <= n - 3; i++) {
        float prom = (v[i] + v[i + 1] + v[i + 2]) / 3.0;
        cout << "P" << i + 1 << ": " << prom << endl;
    }

    return 0;
}
