#include <iostream>
#include <string>
using namespace std;

string Codifica(string cad, int n){
    string r = "";

    for(int i = 0; i < cad.size(); i++){
        char c = cad[i];

        if(c >= 'a' && c <= 'z'){
            c = char( ( (c - 'a') + n ) % 26 + 'a' );
        }
        else if(c >= 'A' && c <= 'Z'){
            c = char( ( (c - 'A') + n ) % 26 + 'A' );
        }

        r += c;
    }

    return r;
}

int main(){
    string texto;
    int n;

    cout << "Ingrese texto: ";
    getline(cin, texto);

    cout << "Valor n: ";
    cin >> n;

    cout << "Codificado: " << Codifica(texto, n);

    return 0;
}
