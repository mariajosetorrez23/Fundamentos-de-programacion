#include <stdio.h>
#include <math.h>

int main() {
    int n, i;
    float x, s = 0, fact;
    printf("Ingrese X y N (impar): ");
    scanf("%f %d", &x, &n);

    for(i = 1; i <= n; i += 2) {
        fact = 1;
        for(int j = 1; j <= i; j++)
            fact *= j;

        if((i / 2) % 2 == 0)
            s += pow(x, i) / fact;
        else
            s -= pow(x, i) / fact;
    }

    printf("La serie es: %.2f\n", s);
    return 0;
}
