#include <iostream>
#include <string>
using namespace std;

int main(){
    string cad;
    cout << "Ingrese texto: ";
    getline(cin, cad);

    int palabras = 0;
    bool enPalabra = false;

    for(int i = 0; i < cad.size(); i++){
        if(cad[i] != ' '){
            if(!enPalabra){
                palabras++;
                enPalabra = true;
            }
        } else {
            enPalabra = false;
        }
    }

    cout << "Cantidad de palabras: " << palabras;
    return 0;
}
