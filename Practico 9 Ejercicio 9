#include <iostream>
#include <cmath>
using namespace std;

int BINARIO_A_DECIMAL(long long binario) {
    int decimal = 0, i = 0;
    while (binario != 0) {
        int digito = binario % 10;
        decimal += digito * pow(2, i);
        binario /= 10;
        i++;
    }
    return decimal;
}

int main() {
    long long bin;
    cout << "Ingrese un numero binario: ";
    cin >> bin;
    cout << "Equivalente decimal: " << BINARIO_A_DECIMAL(bin) << endl;
    return 0;
}
