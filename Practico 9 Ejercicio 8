#include <iostream>
#include <cmath>
using namespace std;

void CUADRATICA(double a, double b, double c) {
    double disc = b * b - 4 * a * c;

    if (disc > 0) {
        double x1 = (-b + sqrt(disc)) / (2 * a);
        double x2 = (-b - sqrt(disc)) / (2 * a);
        cout << "Dos raices reales: " << endl;
        cout << "x1 = " << x1 << ", x2 = " << x2 << endl;
    } 
    else if (disc == 0) {
        double x = -b / (2 * a);
        cout << "Raiz doble: x = " << x << endl;
    } 
    else {
        double real = -b / (2 * a);
        double imag = sqrt(-disc) / (2 * a);
        cout << "Raices complejas: " << endl;
        cout << "x1 = " << real << " + " << imag << "i" << endl;
        cout << "x2 = " << real << " - " << imag << "i" << endl;
    }
}

int main() {
    double a, b, c;
    cout << "Ingrese a, b y c: ";
    cin >> a >> b >> c;
    CUADRATICA(a, b, c);
    return 0;
}
