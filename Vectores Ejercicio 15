#include <iostream>
#include <string>
using namespace std;

struct Alumno {
    string nombre;
    float n1;
    float n2;
    float n3;
    float promedio;
};

int main() {
    int n;
    cout << "Cuantos alumnos ingresara? ";
    cin >> n;

    if (n <= 0 || n > 100) {
        cout << "Cantidad invalida." << endl;
        return 0;
    }

    Alumno lista[100];

    // leer datos
    for (int i = 0; i < n; i++) {
        cout << "\nAlumno " << i + 1 << endl;
        cout << "Nombre (sin espacios): ";
        cin >> lista[i].nombre;
        cout << "Nota 1: ";
        cin >> lista[i].n1;
        cout << "Nota 2: ";
        cin >> lista[i].n2;
        cout << "Nota 3: ";
        cin >> lista[i].n3;

        lista[i].promedio = (lista[i].n1 + lista[i].n2 + lista[i].n3) / 3.0;
    }

    // ordenar por promedio DESCENDENTE (burbuja simple)
    for (int i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - i - 1; j++) {
            if (lista[j].promedio < lista[j + 1].promedio) {
                Alumno aux = lista[j];
                lista[j] = lista[j + 1];
                lista[j + 1] = aux;
            }
        }
    }

    // mostrar los 3 mejores promedios
    cout << "\n--- Tres mejores alumnos ---\n";

    int limite = n;
    if (limite > 3) {
        limite = 3;
    }

    for (int i = 0; i < limite; i++) {
        cout << lista[i].nombre << " - Promedio: " << lista[i].promedio << endl;
    }

    return 0;
}
