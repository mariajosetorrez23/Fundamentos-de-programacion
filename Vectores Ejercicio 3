#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Cuantos valores tendra el vector? ";
    cin >> n;

    if (n <= 0 || n > 100) {
        cout << "Cantidad invalida." << endl;
        return 0;
    }

    float v[100];
    float suma = 0;

    // Leer los valores
    for (int i = 0; i < n; i++) {
        cout << "Valor " << i + 1 << ": ";
        cin >> v[i];
        suma = suma + v[i];
    }

    float promedio = suma / n;

    cout << "El promedio es: " << promedio << endl;

    return 0;
}
