#include <iostream>
using namespace std;

int main() {
    int n;

    cout << "Cuantos elementos tendra el vector? ";
    cin >> n;

    if (n <= 0 || n > 100) {
        cout << "Cantidad invalida." << endl;
        return 0;
    }

    int v[100];
    int r[100];

    // Leer vector original
    for (int i = 0; i < n; i++) {
        cout << "Elemento " << i + 1 << ": ";
        cin >> v[i];
    }

    // Llenar el vector invertido
    for (int i = 0; i < n; i++) {
        r[i] = v[n - 1 - i];
    }

    // Mostrar vector original
    cout << "Vector original: ";
    for (int i = 0; i < n; i++) {
        cout << v[i] << " ";
    }

    cout << endl;

    // Mostrar vector invertido
    cout << "Vector invertido: ";
    for (int i = 0; i < n; i++) {
        cout << r[i] << " ";
    }

    cout << endl;

    return 0;
}
