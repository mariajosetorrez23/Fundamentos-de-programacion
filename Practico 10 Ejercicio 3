#include <iostream>
#include <vector>
using namespace std;

int main() {
    int n;
    cout << "Cantidad de elementos: ";
    cin >> n;

    vector<double> v(n);
    cout << "Ingrese los valores:\n";
    for (int i = 0; i < n; ++i)
        cin >> v[i];

    double suma = 0;
    for (int i = 0; i < n; ++i)
        suma += v[i];

    double promedio = suma / n;
    cout << "Promedio: " << promedio << endl;
    return 0;
}
