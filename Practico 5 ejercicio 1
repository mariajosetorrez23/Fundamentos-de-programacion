#include <stdio.h>
int main() {
    float peso;
    float costo;

printf("Ingrese el peso de la carta en gramos: ");
scanf("%f", &peso);

if (peso>0 && peso< 50) {
    printf("El costo es Bs 1.50");
}
else if (peso>50 && peso<=100) {
    printf("El costo es Bs 4.00");
}
else if (peso>100 && peso<=200) {
    printf("El costo es Bs 6.00");
}
else if (peso>200 && peso<=350) {
    printf("El costo es Bs 10.50");
}
else if (peso>350 && peso<= 500) {
    printf("El costo es Bs 15.00");
}
else {
    printf("NO PUEDE ENVIAR COMO CARTA");

}

return 0;





}
