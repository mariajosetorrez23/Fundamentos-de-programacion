#include <stdio.h>

int main() {
    int n, dig, invalido = 0;
    printf("Ingrese un numero en base 8: ");
    scanf("%d", &n);

    while (n > 0) {
        dig = n % 10;
        if (dig > 7) {
            invalido = 1;
            break;
        }
        n = n / 10;
    }

    if (invalido)
        printf("El numero tiene digitos que no pertenecen a la base 8\n");
    else
        printf("El numero es valido en base 8\n");

    return 0;
}
