#include <iostream>
#include <string>
using namespace std;

bool EsPalindromo(string cad){
    int i = 0;
    int j = cad.size() - 1;

    while(i < j){
        if(cad[i] != cad[j]){
            return false;
        }
        i++;
        j--;
    }
    return true;
}

int main(){
    string texto;
    cout << "Ingrese texto: ";
    getline(cin, texto);

    if(EsPalindromo(texto))
        cout << "true";
    else
        cout << "false";

    return 0;
}
