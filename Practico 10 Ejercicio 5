#include <iostream>
#include <vector>
using namespace std;

int main() {
    int n;
    cout << "Cantidad de elementos: ";
    cin >> n;

    vector<int> v(n);
    cout << "Ingrese los valores:\n";
    for (int i = 0; i < n; ++i)
        cin >> v[i];

    bool capicua = true;
    for (int i = 0; i < n / 2; ++i) {
        if (v[i] != v[n - 1 - i]) {
            capicua = false;
            break;
        }
    }

    if (capicua)
        cout << "El vector es capicua\n";
    else
        cout << "El vector NO es capicua\n";

    return 0;
}
