#include <iostream>
#include <vector>
#include <cmath>
using namespace std;

int main() {
    int n;
    cout << "Cantidad de elementos: ";
    cin >> n;

    vector<double> A(n);
    cout << "Ingrese los valores:\n";
    for (int i = 0; i < n; ++i)
        cin >> A[i];

    double maxDif = 0;
    for (int i = 0; i < n - 1; ++i) {
        double dif = fabs(A[i+1] - A[i]);
        if (dif > maxDif)
            maxDif = dif;
    }

    cout << "Mayor diferencia entre consecutivos: " << maxDif << endl;
    return 0;
}
