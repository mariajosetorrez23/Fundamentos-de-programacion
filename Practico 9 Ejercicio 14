#include <iostream>
#include <ctime>
using namespace std;

int diasEntre(int d1, int m1, int a1, int d2, int m2, int a2) {
    tm fecha1 = {0, 0, 0, d1, m1 - 1, a1 - 1900};
    tm fecha2 = {0, 0, 0, d2, m2 - 1, a2 - 1900};
    time_t t1 = mktime(&fecha1);
    time_t t2 = mktime(&fecha2);
    double segundos = difftime(t2, t1);
    return abs(segundos / (60 * 60 * 24));
}

int main() {
    int d1, m1, a1, d2, m2, a2;
    cout << "Ingrese primera fecha (dia mes año): ";
    cin >> d1 >> m1 >> a1;
    cout << "Ingrese segunda fecha (dia mes año): ";
    cin >> d2 >> m2 >> a2;
    cout << "Dias transcurridos: " << diasEntre(d1, m1, a1, d2, m2, a2) << endl;
    return 0;
}
