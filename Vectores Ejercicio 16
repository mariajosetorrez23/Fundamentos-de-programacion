#include <iostream>
#include <string>
using namespace std;

int main() {
    string nombres[100];
    float notas[100];
    int n = 0;   // cantidad actual de alumnos
    int opcion;

    do {
        cout << "\n----- MENU ----\n";
        cout << "1. Agregar alumno\n";
        cout << "2. Listar alumnos\n";
        cout << "3. Buscar alumno por nombre\n";
        cout << "4. Eliminar alumno por nombre\n";
        cout << "5. Salir\n";
        cout << "Elija una opcion: ";
        cin >> opcion;

        // OPCION 1: agregar alumno
        if (opcion == 1) {
            cout << "Nombre (sin espacios): ";
            cin >> nombres[n];
            cout << "Nota: ";
            cin >> notas[n];
            n++;
            cout << "Alumno agregado.\n";
        }

        // OPCION 2: listar alumnos
        else if (opcion == 2) {
            if (n == 0) {
                cout << "No hay alumnos cargados.\n";
            } else {
                cout << "\n--- LISTA DE ALUMNOS ---\n";
                for (int i = 0; i < n; i++) {
                    cout << nombres[i] << " - " << notas[i] << endl;
                }
            }
        }

        // OPCION 3: buscar alumno
        else if (opcion == 3) {
            string buscado;
            cout << "Ingrese el nombre a buscar: ";
            cin >> buscado;

            bool encontrado = false;
            for (int i = 0; i < n; i++) {
                if (nombres[i] == buscado) {
                    cout << "Encontrado: " << nombres[i] << " - " << notas[i] << endl;
                    encontrado = true;
                    break;
                }
            }

            if (!encontrado) {
                cout << "Alumno no encontrado.\n";
            }
        }

        // OPCION 4: eliminar alumno
        else if (opcion == 4) {
            string borrar;
            cout << "Ingrese el nombre del alumno a eliminar: ";
            cin >> borrar;

            bool eliminado = false;
            for (int i = 0; i < n; i++) {
                if (nombres[i] == borrar) {
                    // correr los elementos hacia atras
                    for (int j = i; j < n - 1; j++) {
                        nombres[j] = nombres[j + 1];
                        notas[j] = notas[j + 1];
                    }
                    n--;
                    eliminado = true;
                    cout << "Alumno eliminado.\n";
                    break;
                }
            }

            if (!eliminado) {
                cout << "No existe un alumno con ese nombre.\n";
            }
        }

    } while (opcion != 5);

    cout << "Fin del programa.\n";
    return 0;
}
