#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Cuantos elementos tiene el vector? ";
    cin >> n;

    if (n < 2) {
        cout << "Debe haber al menos 2 numeros." << endl;
        return 0;
    }

    float v[100];

    // Leer los valores
    for (int i = 0; i < n; i++) {
        cout << "Valor " << i + 1 << ": ";
        cin >> v[i];
    }

    // Calculamos la primera diferencia para iniciar "mayor"
    float dif = v[1] - v[0];
    if (dif < 0) dif = -dif;
    float mayor = dif;

    // Recorremos el resto
    for (int i = 1; i < n - 1; i++) {
        float d = v[i+1] - v[i];
        if (d < 0) d = -d;   // valor absoluto

        if (d > mayor) {
            mayor = d;
        }
    }

    cout << "Mayor diferencia entre elementos consecutivos: " << mayor << endl;

    return 0;
}
