#include <iostream>
#include <cmath>
using namespace std;

long long FAC(int n) {
    long long f = 1;
    for (int i = 1; i <= n; i++)
        f *= i;
    return f;
}

double serie2(int x, int n) {
    double S = 0;
    int signo = 1;  // Comienza con positivo
    for (int i = 1; i <= n; i += 2) {
        S += signo * (pow(x, i) / FAC(i));
        signo *= -1; // Cambia el signo en cada paso
    }
    return S;
}

int main() {
    int x, n;
    cout << "Ingrese X: ";
    cin >> x;
    cout << "Ingrese N: ";
    cin >> n;
    cout << "Suma de la serie alternada = " << serie2(x, n) << endl;
    return 0;
}
