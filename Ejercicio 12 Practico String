#include <iostream>
#include <string>
using namespace std;

string BorraCaracterDeCadena(string cad, char borrar){
    string r = "";
    for(int i = 0; i < cad.size(); i++){
        if(cad[i] != borrar){
            r += cad[i];
        }
    }
    return r;
}

int main(){
    string texto;
    char c;

    cout << "Texto: ";
    getline(cin, texto);

    cout << "Caracter a borrar: ";
    cin >> c;

    string resultado = BorraCaracterDeCadena(texto, c);

    cout << "Resultado: " << resultado;
    return 0;
}
