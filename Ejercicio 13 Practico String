#include <iostream>
#include <string>
using namespace std;

int BuscarSubCadena(string sub, string cad){
    int tamSub = sub.size();
    int tamCad = cad.size();

    for(int i = 0; i <= tamCad - tamSub; i++){
        bool igual = true;
        for(int j = 0; j < tamSub; j++){
            if(cad[i+j] != sub[j]){
                igual = false;
                break;
            }
        }
        if(igual){
            return i;
        }
    }
    return -1;
}

int main(){
    string cad, sub;
    cout << "Cadena: ";
    getline(cin, cad);
    cout << "Subcadena: ";
    getline(cin, sub);

    cout << "Posicion: " << BuscarSubCadena(sub, cad);

    return 0;
}
