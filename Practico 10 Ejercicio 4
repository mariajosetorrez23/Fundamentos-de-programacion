#include <iostream>
#include <vector>
using namespace std;

int main() {
    int n;
    cout << "Cantidad de elementos: ";
    cin >> n;

    vector<int> v(n);
    cout << "Ingrese los valores:\n";
    for (int i = 0; i < n; ++i)
        cin >> v[i];

    vector<int> rev(n);
    for (int i = 0; i < n; ++i)
        rev[i] = v[n - 1 - i];

    cout << "Vector original: ";
    for (int x : v) cout << x << " ";
    cout << "\nVector revertido: ";
    for (int x : rev) cout << x << " ";
    cout << endl;

    return 0;
}
