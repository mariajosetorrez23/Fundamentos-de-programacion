#include <stdio.h>

int main() {
    int n, dig, cont = 0;
    printf("Ingrese un numero: ");
    scanf("%d", &n);

    while (n > 0) {
        dig = n % 10;
        if (dig % 2 == 0)
            cont++;
        n = n / 10;
    }

    printf("Cantidad de digitos pares: %d\n", cont);
    return 0;
}
