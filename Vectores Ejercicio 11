#include <iostream>
using namespace std;

int main(){
    int n;
    cout << "Cantidad de valores: ";
    cin >> n;

    int v[100];
    for(int i = 0; i < n; i++){
        cin >> v[i];
    }

    int pos = 0, neg = 0, cer = 0;

    for(int i = 0; i < n; i++){
        if(v[i] > 0) pos++;
        else if(v[i] < 0) neg++;
        else cer++;
    }

    cout << "Positivos: " << pos << endl;
    cout << "Negativos: " << neg << endl;
    cout << "Ceros: " << cer;

    return 0;
}
