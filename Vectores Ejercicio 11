#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Cuantos valores ingresara? ";
    cin >> n;

    int v[100];

    // leer valores
    for (int i = 0; i < n; i++) {
        cout << "Valor " << i + 1 << ": ";
        cin >> v[i];
    }

    int positivos = 0;
    int negativos = 0;
    int ceros = 0;

    // contar
    for (int i = 0; i < n; i++) {
        if (v[i] > 0)
            positivos++;
        else if (v[i] < 0)
            negativos++;
        else
            ceros++;
    }

    cout << "Positivos: " << positivos << endl;
    cout << "Negativos: " << negativos << endl;
    cout << "Ceros: " << ceros << endl;

    return 0;
}
