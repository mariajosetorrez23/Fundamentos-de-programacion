#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Cuantos valores tendra el vector? ";
    cin >> n;

    if (n <= 0 || n > 100) {
        cout << "Cantidad invalida." << endl;
        return 0;
    }

    float v[100];

    // leer los valores
    for (int i = 0; i < n; i++) {
        cout << "Valor " << i + 1 << ": ";
        cin >> v[i];
    }

    // suponemos que el menor es el primero
    float minimo = v[0];

    // comparamos con el resto
    for (int i = 1; i < n; i++) {
        if (v[i] < minimo) {
            minimo = v[i];
        }
    }

    cout << "El minimo es: " << minimo << endl;

    return 0;
}


